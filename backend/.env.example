# Environment variables for the backend API

# Port on which the backend server should listen
PORT=3000

# Telegram bot token used for server-side API calls to Telegram (optional)
TG_BOT_TOKEN=

# Secret key to verify initData from Telegram (if you plan to verify it)
TG_BOT_API_SECRET=
# TON API key or credentials if you need to interact with TON blockchain from the backend
TON_API_KEY=
TON_API_URL=https://tonapi.io/v2

# Supabase configuration (optional)
SUPABASE_URL=
SUPABASE_ANON_KEY=
TG_BOT_WEBHOOK_URL=

TELEGRAM_BOT_USERNAME=tonrodybuild_bot
WS_ALLOWED_ORIGINS=https://your-frontend-domain
APP_BASE_URL=https://your-backend-domain
INVITE_BASE=https://your-domain/i/
CONFIRMATIONS_REQUIRED=3
